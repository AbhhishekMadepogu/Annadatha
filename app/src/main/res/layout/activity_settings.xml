<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/app_bar_settings">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <TextView
                    android:id="@+id/txtclose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="close"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_alignParentStart="true"
                    ></TextView>
                <TextView
                    android:id="@+id/txtupdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="update"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginRight="8dp"
                    android:layout_alignParentEnd="true"
                    ></TextView>
            </RelativeLayout>


        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ivsettingsprofile_image"
        android:layout_below="@id/app_bar_settings"
        android:layout_marginTop="20dp"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/profile"
        android:layout_centerHorizontal="true"
        app:civ_border_width="2dp"
        android:layout_gravity="center"
        app:civ_border_color="@android:color/white"/>
    <TextView
        android:id="@+id/txtprofileimagechange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Profile Image"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:layout_below="@id/ivsettingsprofile_image"
        ></TextView>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/txtprofileimagechange"
        android:hint="Phone Number"
        android:id="@+id/settings_phone"
        android:background="@drawable/input_design"></EditText>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/settings_phone"
        android:hint="Full Name"
        android:id="@+id/settings_full_Name"
        android:background="@drawable/input_design"></EditText>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/settings_full_Name"
        android:hint="Address"
        android:id="@+id/settings_Address"
        android:background="@drawable/input_design"></EditText>

</RelativeLayout>