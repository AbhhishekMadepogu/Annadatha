<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomerCategoryActivity">
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Categories"
        android:textColor="@color/colorPrimary"
        android:textAlignment="center"
        android:id="@+id/tvaddCategory1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:textSize="26sp"
        android:textStyle="bold"
        ></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/line1"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/tvaddCategory1"
        >
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/fruits"
            android:id="@+id/ivFruitsc"
            android:padding="10dp"
            ></ImageView>
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/greenleafy"
            android:id="@+id/ivGreensc"
            android:padding="10dp"></ImageView>
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/milk"
            android:id="@+id/ivmilkc"
            android:padding="10dp"
            ></ImageView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/line2"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/line1"
        >
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/eggs"
            android:id="@+id/ivEggsc"
            android:padding="10dp"
            ></ImageView>
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/meat2"
            android:id="@+id/ivmeatc"
            android:padding="10dp"></ImageView>
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/rice"
            android:id="@+id/ivRicec"
            android:padding="10dp"
            ></ImageView>

    </LinearLayout>



</RelativeLayout>