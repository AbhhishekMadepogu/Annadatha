<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SellerRegistrationActivity">
    <ImageView
        android:layout_width="match_parent"

        android:layout_height="250dp"
        android:id="@+id/imgSeller"
        android:layout_margin="15dp"
        android:src="@drawable/farmerindia"></ImageView>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/imgSeller"
        android:layout_margin="15dp"
        android:hint="Enter Your Phone Number"
        android:background="@drawable/input_design"
        android:id="@+id/etsellerregPhone"></EditText>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/etsellerregPhone"
        android:layout_margin="15dp"
        android:hint="Enter Your Full Name"
        android:background="@drawable/input_design"
        android:id="@+id/etsellerregName"></EditText>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/etsellerregName"
        android:background="@drawable/input_design"
        android:layout_margin="15dp"
        android:hint="Enter Your Password"
        android:id="@+id/etsellerregPassword"></EditText>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/etsellerregPassword"
        android:background="@drawable/input_design"
        android:layout_margin="15dp"
        android:hint="Enter Your Address"
        android:id="@+id/etsellerregAddress"></EditText>
    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/etsellerregAddress"
        android:layout_margin="15dp"
        android:text="Register"
        android:background="@drawable/buttons"
        android:id="@+id/btnSellerregregister"
        android:textColor="@android:color/white"></Button>
    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/btnSellerregregister"
        android:layout_margin="15dp"
        android:text="Already member? LOgin"
        android:background="@drawable/input_design"
        android:textColor="@android:color/black"
        android:id="@+id/btnSellerreglogin"></Button>


</RelativeLayout>