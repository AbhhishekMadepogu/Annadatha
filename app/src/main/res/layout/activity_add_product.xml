<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddProductActivity">
    <ImageView
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_camera_alt_black_24dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/ivProductImage"></ImageView>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_design"
        android:layout_below="@id/ivProductImage"
        android:layout_marginTop="20dp"
        android:hint="Enter Product Name"
        android:inputType="textImeMultiLine"
        android:padding="20dp"
        android:id="@+id/etProductName"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        >
    </EditText>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_design"
        android:layout_below="@id/etProductName"
        android:layout_marginTop="20dp"
        android:hint="Enter Product Description"
        android:inputType="textImeMultiLine"
        android:padding="20dp"
        android:id="@+id/etProducDescription"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        >
    </EditText>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_design"
        android:layout_below="@id/etProducDescription"
        android:layout_marginTop="20dp"
        android:hint="Enter Product Quantity"
        android:inputType="textImeMultiLine"
        android:padding="20dp"
        android:id="@+id/etProductQuantity"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        >
    </EditText>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_design"
        android:layout_below="@id/etProductQuantity"
        android:layout_marginTop="20dp"
        android:hint="Enter Product Price"
        android:inputType="textImeMultiLine"
        android:padding="20dp"
        android:id="@+id/etProductPrice"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        >
    </EditText>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/buttons"
        android:layout_below="@id/etProductPrice"
        android:layout_marginTop="20dp"
        android:text="Add Product"
        android:textColor="#fff"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/btnAddProduct"></Button>

</RelativeLayout>