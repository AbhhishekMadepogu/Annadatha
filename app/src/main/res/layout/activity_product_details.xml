<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductDetailsActivity">
    <ImageView
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_margin="15dp"
        android:id="@+id/productDetailsImage"
        android:scaleType="centerCrop"
        ></ImageView>
    <TextView

        android:layout_width="match_parent"
        android:layout_height="15sp"
        android:textStyle="bold"
        android:text="Product Name"
        android:layout_below="@+id/productDetailsImage"

        android:gravity="center"
        android:id="@+id/productdetailsName"
        android:layout_marginTop="20dp"
        ></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="15sp"
        android:textStyle="bold"
        android:text="Product Details"
        android:layout_below="@+id/productdetailsName"

        android:gravity="center"
        android:id="@+id/tvProductdetailsPrice"
        android:layout_marginTop="10dp"
        ></TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="15sp"
        android:textStyle="bold"
        android:text="Product Price"
        android:layout_below="@+id/tvProductdetailsPrice"

        android:gravity="center"
        android:id="@+id/tvProductdetailsDescription"
        android:layout_marginTop="20dp"
        ></TextView>
    <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
        android:id="@+id/numberbtn"
        android:layout_centerHorizontal="true"
        android:layout_width="90dp"
        android:layout_marginTop="90dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tvProductdetailsPrice"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:elevation="6dp"
        app:textSize="9dp"
        app:initialNumber="1"
        app:finalNumber="20"
        ></com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>
    <Button
        android:id="@+id/btnproductdetailsaddtocart"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@drawable/cartbutton"
        android:layout_below="@+id/numberbtn"
        android:layout_centerHorizontal="true"
        android:text="Add to Cart"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginTop="220dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        ></Button>



</RelativeLayout>